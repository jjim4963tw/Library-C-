<Window x:Class="LibraryWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryWPF"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <StackPanel VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="30, 30, 0, 0">
        <Button Content="圓角按鈕"
                Padding="10"
                FontSize="16"
                Click="RoundButton_Click" />

        <Button Content="GIF 播放"
                Margin="0, 30, 0, 0"
                Padding="10"
                FontSize="16"
                Click="GIFPlayer_Click" />

        <Button Content="顯示訊息框"
                Margin="0, 30, 0, 0"
                Padding="10"
                FontSize="16"
                Click="AlertButton_Click" />

        <Button Content="顯示載入框"
                Margin="0, 30, 0, 0"
                Padding="10"
                FontSize="16"
                Click="LoadinButton_Click" />

    </StackPanel>
</Window>
